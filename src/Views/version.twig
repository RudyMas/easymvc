{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}EasyMVC{% endblock %}
{% block jvscript %}
    {{ parent() }}
{% endblock %}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block container %}
    <div class="emvc-center-element">
        <div class="jumbotron" style="overflow: hidden">
            <h1 class="display-4">EasyMVC</h1>
            <h4>version: {{ constant('EMVC_VERSION') }}</h4>
            <h4>Core version: {{ constant('CORE_VERSION') }}</h4>
            <hr>
            <h1 class="display-4">Website '{{ constant('NAME_WEBSITE') }}'</h1>
            <h4>Alpha Version: {{ constant('VERSION_ALPHA')|raw }}</h4>
            <h4>Beta Version: {{ constant('VERSION_BETA')|raw }}</h4>
            <h4>Production Version: {{ constant('VERSION')|raw }}</h4>
        </div>
    </div>
{% endblock %}