{
  "name": "easymvc/easymvc",
  "description": "EasyMVC PHP Framework with Mobile App support",
  "type": "project",
  "version": "1.0.1",
  "keywords": [
    "MVC",
    "Framework",
    "PHP",
    "Angular"
  ],
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Rudy Mas",
      "email": "rudy.mas@rmssoft.be",
      "homepage": "http://www.rmsoft.be",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "support@rmsoft.be",
    "source": "https://github.com/RudyMas/easymvc"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^7.1",
    "rudymas/router": "*",
    "easymvc/controller": "*",
    "easymvc/repository": "*",
    "easymvc/email": "*",
    "easymvc/httprequest": "*",
    "easymvc/login": "*",
    "easymvc/menu": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "Models\\": "src/Models",
      "Repositories\\": "src/Repositories",
      "Controllers\\": "src/Controllers",
      "Views\\": "src/Views",
      "Tests\\": "Tests"
    }
  },
  "scripts": {
    "post-create-project-cmd" : [
      "npm install"
    ],
    "post-update-cmd": [
      "npm update --save"
    ]
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  }
}